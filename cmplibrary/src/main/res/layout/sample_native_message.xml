<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/native_message"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white"
        android:clickable="true"
        android:focusable="true">

    <TextView
            android:id="@+id/Title"
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:layout_marginTop="180dp"
            android:text="@string/hello_stranger"/>

    <TextView
            android:id="@+id/MsgBody"
            android:layout_width="310dp"
            android:layout_height="325dp"
            android:layout_marginTop="40dp"
            android:text="@string/MsgBody"
            android:scrollbars="vertical"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/Title"/>

    <Button
            android:id="@+id/AcceptAll"
            android:layout_width="88dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="60dp"
            android:layout_marginRight="60dp"
            android:layout_marginBottom="60dp"
            android:text="@string/i_agree"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"/>

    <Button
            android:id="@+id/Cancel"
            android:layout_width="62dp"
            android:layout_height="51dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="30dp"
            android:layout_marginRight="30dp"
            android:text="@string/x"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"/>

    <Button
            android:id="@+id/RejectAll"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_marginStart="60dp"
            android:layout_marginLeft="60dp"
            android:layout_marginBottom="60dp"
            android:text="@string/reject_all"
            android:layout_alignParentBottom="true"/>

    <Button
            android:id="@+id/ShowOptions"
            android:layout_width="98dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="30dp"
            android:clickable="true"
            android:focusable="true"
            android:text="@string/show_opitions"/>
</RelativeLayout>
