<?xml version="1.0" encoding="utf-8"?>
<com.sourcepointmeta.metaapp.ui.eventlogs.LogItemView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:background="?android:attr/selectableItemBackground"
        android:layout_height="wrap_content"
        android:layout_width="match_parent">

    <CheckBox
            android:id="@+id/checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
    />

    <TextView
            tools:text="Log"
            android:id="@+id/log_title"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/checkbox"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:textAppearance="?attr/textAppearanceHeadline7"
            android:textColor="?android:attr/textColorAlertDialogListItem"
            android:paddingTop="8dp"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:maxLines="5"
            android:ellipsize="marquee"
    />

    <TextView
            tools:text="Log"
            android:id="@+id/log_body"
            app:layout_constraintTop_toBottomOf="@id/log_title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_height="wrap_content"
            android:textAppearance="?attr/textAppearanceSubtitle2"
            android:layout_width="match_parent"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:maxLines="5"
            android:ellipsize="marquee"
    />

    <TextView
            tools:text="Log"
            android:id="@+id/log_body_1"
            app:layout_constraintTop_toBottomOf="@id/log_body"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_height="wrap_content"
            android:textAppearance="?attr/textAppearanceBody2"
            android:layout_width="match_parent"
            android:textColor="?android:attr/textColorAlertDialogListItem"
            android:paddingBottom="8dp"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:maxLines="5"
            android:ellipsize="marquee"
    />

</com.sourcepointmeta.metaapp.ui.eventlogs.LogItemView>
