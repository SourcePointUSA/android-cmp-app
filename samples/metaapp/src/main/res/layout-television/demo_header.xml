<?xml version="1.0" encoding="utf-8"?>
<com.sourcepointmeta.metaapp.tv.demo.DemoTitleView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/browse_title_group"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:clickable="false"
        android:focusable="false"
        tools:ignore="MissingDefaultResource">

    <ImageButton
            android:id="@+id/refresh_flm"
            style="@style/Widget.Leanback.ImageCardView"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginStart="50dp"
            android:layout_gravity="bottom|end"
            android:background="@null"
            android:clickable="true"
            android:clipToPadding="false"
            android:focusable="true"
            android:src="@drawable/refresh_selector"
            android:stateListAnimator="@xml/animate_scale"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    <Button
            android:id="@+id/gdpr_pm"
            android:clickable="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="50dp"
            android:stateListAnimator="@xml/animate_scale_text_button"
            android:background="@null"
            style="@style/Widget.Leanback.DetailsDescriptionTitleStyle"
            android:text="GDPR PM"
    />

</com.sourcepointmeta.metaapp.tv.demo.DemoTitleView>