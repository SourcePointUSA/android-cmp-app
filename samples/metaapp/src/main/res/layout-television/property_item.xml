<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="0dp"
    android:clickable="true"
    android:elevation="3dp"
    android:focusable="true">

    <com.sourcepointmeta.metaapp.ui.component.PropertyItemView
        android:id="@+id/property_view_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:focusable="auto"
        android:padding="8dp">

        <LinearLayout
            android:layout_width="230dp"
            android:layout_height="match_parent"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/property_name"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginStart="0dp"
                android:gravity="center"
                android:padding="3dp"
                android:textAppearance="?attr/textAppearanceHeadline6"
                android:textSize="24sp"
                app:autoSizeMaxTextSize="28dp"
                app:autoSizeMinTextSize="20dp"
                tools:text="mobile.demo.com" />

            <TextView
                android:id="@+id/account_id"
                android:layout_width="254dp"
                android:layout_height="50dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginStart="0dp"
                android:layout_marginEnd="0dp"
                android:gravity="center"
                android:padding="0dp"
                android:textAppearance="?attr/textAppearanceSubtitle2"
                android:textSize="32sp"
                app:autoSizeMaxTextSize="32dp"
                app:autoSizeMinTextSize="20dp"
                tools:text="22" />

            <TextView
                android:id="@+id/campaign_env"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginStart="0dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="0dp"
                android:gravity="center"
                android:padding="3dp"
                android:textAppearance="?attr/textAppearanceSubtitle2"
                android:textSize="32sp"
                app:autoSizeMaxTextSize="32dp"
                app:autoSizeMinTextSize="20dp"
                tools:text="stage" />

            <TextView
                android:id="@+id/message_type"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginStart="0dp"
                android:gravity="center"
                android:padding="3dp"
                android:textAppearance="?attr/textAppearanceSubtitle2"
                android:textSize="32sp"
                app:autoSizeMaxTextSize="32dp"
                app:autoSizeMinTextSize="20dp"
                tools:text="Web-view" />

            <com.google.android.material.chip.ChipGroup
                android:id="@+id/chip_group"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center|fill_horizontal"
                android:layout_marginTop="5dp"
                android:focusable="false"
                android:touchscreenBlocksFocus="false"
                app:chipSpacing="8dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/campaign_env"
                app:singleLine="false">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:focusable="false"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal">

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chip_gdpr"
                        style="@style/Widget.MaterialComponents.Chip.Choice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:focusable="false"
                        android:selectAllOnFocus="false"
                        android:text="GDPR"
                        android:textColor="#3F51B5"
                        android:textIsSelectable="false"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chip_ccpa"
                        style="@style/Widget.MaterialComponents.Chip.Choice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:focusable="false"
                        android:selectAllOnFocus="false"
                        android:text="CCPA"
                        android:textColor="#3F51B5"
                        android:textIsSelectable="false"
                        android:textSize="20sp"
                        android:textStyle="bold" />
                </LinearLayout>

            </com.google.android.material.chip.ChipGroup>
        </LinearLayout>


    </com.sourcepointmeta.metaapp.ui.component.PropertyItemView>

</com.google.android.material.card.MaterialCardView>