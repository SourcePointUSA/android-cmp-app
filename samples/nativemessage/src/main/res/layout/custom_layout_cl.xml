<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/custom_native_message"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff"
>
    <TextView
            android:id="@+id/title_cl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/title"
            android:gravity="center"
            android:textSize="36sp"
            android:layout_margin="10dp"
            app:layout_constraintTop_toTopOf="parent"
            android:background="#41FF0000"/>
    <TextView
            android:id="@+id/body_cl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/title_cl"
            android:scrollbars="vertical"
            android:layout_margin="10dp"
            android:text="@string/body"
            android:textSize="14sp"
            android:background="#37FFC107"/>
    <Button
            android:id="@+id/accept_all_cl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/body_cl"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="@string/agree_btn"/>
    <Button
            android:id="@+id/cancel_cl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/accept_all_cl"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="@string/cancel_btn"/>
    <Button
            android:id="@+id/reject_all_cl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/cancel_cl"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="@string/reject_all"/>
    <Button
            android:id="@+id/show_options_cl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/reject_all_cl"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="@string/show_options_btn"/>
</androidx.constraintlayout.widget.ConstraintLayout>